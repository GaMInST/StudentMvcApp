<!-- Views/Student/AddStudent.cshtml -->
@model StudentMvcApp.Models.Student

<h2>Add Student</h2>

<form asp-action="AddStudent" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Img">Image URL</label>
        <input asp-for="Img" class="form-control" />
        <span asp-validation-for="Img" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Student</button>
</form>

<a href="@Url.Action("GetAllStudent", "Student")" class="btn btn-secondary">Back to List</a>
